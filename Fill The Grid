#include <iostream>
using namespace std;

int main() {
	int t;
	//int a=1;
	std::cin >> t;
	while(t!=0){
	    int x,y;
	    std::cin >> x >> y ;
	    if(x==1&&y==1)
	    {
	        std::cout << 1 << std::endl;
	        
	    }else if(x%2!=0&&y%2!=0){
	         std::cout << ((y%2*x)+(x%2*y))-1 << std::endl;
	    }else
	       {
	            std::cout << (y%2*x)+(x%2*y) << std::endl;
	       }
	    t--;
	}
	return 0;
}
